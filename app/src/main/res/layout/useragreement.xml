<!-- useragreement.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section 1: Acceptance of Terms -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acceptance of Terms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Section 2: Description of Service -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of Service"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>


        <!-- Section 4: Privacy Policy -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/privacyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your privacy is important to us. Please review our Privacy Policy. Data Privacy Act of 2012 for information on how we collect, use, and disclose your personal information."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 5: User Conduct -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Conduct"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You agree not to engage in any behavior that violates laws or infringes on the rights of others, including but not limited to spamming, hacking, or unauthorized access."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 6: Intellectual Property -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intellectual Property"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="All content, trademarks, logos, and intellectual property associated with the App are owned by Error 404. You may not use, copy, reproduce, modify, distribute, or create derivative works without prior written consent."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 7: Disclaimers -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclamers"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The App provides hairstyle recommendations for informational purposes only. Error 404 does not guarantee the accuracy or suitability of the recommendations."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 8: Limitation of Liability -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limitation of Liability"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error 404 shall not be liable for any direct, indirect, incidental, special, or consequential damages arising out of the use or inability to use the App."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 9: Termination -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Termination"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error 404 reserves the right to terminate or suspend access to the App at any time for any reason."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 10: Governing Law -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Governing Law"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Agreement shall be governed by and construed in accordance with the laws of the Philippines."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Section 11: Changes to Terms -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changes to Terms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error 404 may update these terms from time to time. You will be notified of any material changes."
            android:textSize="16sp"
            android:textColor="@color/black"
            >


        </TextView>


        <!-- Section 12: Contact Us -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have any questions or concerns about these terms, please contact us at meowming965@gmail.com."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>
        <CheckBox
            android:id="@+id/agreeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms of Service and Privacy Policy"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Proceed Button -->
        <Button
            android:id="@+id/proceedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>

</ScrollView>
