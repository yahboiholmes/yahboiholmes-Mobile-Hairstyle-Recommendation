<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#443C54"
    android:gravity="center">


    <ImageView
        android:id="@+id/logoadd"
        android:layout_width="166dp"
        android:layout_height="174dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/adminlogosplash" />

    <ImageView
        android:id="@+id/logoadd1"
        android:layout_width="166dp"
        android:layout_height="174dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        app:srcCompat="@drawable/splashlogoadmin" />

    <RelativeLayout
        android:id="@+id/framelog"
        android:layout_width="314dp"
        android:layout_height="427dp"
        android:layout_gravity="center"
        android:background="@drawable/frame1"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835">

        <EditText
            android:id="@+id/usernameadd"
            android:layout_width="252dp"
            android:layout_height="65dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/adminusername"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="281dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:background="@drawable/textholder"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColorHint="@color/white"
            android:textSize="19dp">

        </EditText>

        <EditText
            android:id="@+id/passwordadd"
            android:layout_width="253dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="158dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="202dp"
            android:background="@drawable/textholder"
            android:drawableLeft="@drawable/passwordaddmin"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:paddingStart="10dp"
            android:paddingLeft="8dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="19dp">

        </EditText>

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="233dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="152dp"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="20dp">


        </TextView>

        <TextView
            android:id="@+id/logs"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="372dp">


        </TextView>

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="293dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="86dp"
            android:background="@drawable/buttonlogin"
            android:text="Login"
            android:textAlignment="center">

        </Button>





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>